
# ============================
# lf - minimal file manager
# Theme: Tokyo Night (terminal-driven)
# ============================

set shell sh
set shellopts '-eu'
set ifs "\n"

set hidden true
set ignorecase true
set smartcase true
set icons true
set drawbox true
set scrolloff 10

# Preview
set preview true
set previewer ~/.config/lf/previewer.sh
set cleaner ~/.config/lf/cleaner.sh

# Keybindings
map gh cd ~
map g/ cd /
map gg cd
map gr reload

map <enter> open
map o open
map O !xdg-open "$f"

map yy copy
map dd cut
map pp paste
map dD delete

map e $$EDITOR "$f"

map zh set hidden!
map zp set preview!
map zl redraw

map q quit

